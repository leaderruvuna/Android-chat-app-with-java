<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/searchToolbar"
    android:background="#ffffff"

    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    >
    <!-- this theme and popup attributes give us the white color to the bar title and back icon -->
       <EditText
       android:layout_width="300dp"
       android:layout_height="30dp"
       android:hint="Search"
       android:id="@+id/search_more_friend_input"
       android:paddingLeft="10dp"
       android:textColorHint="#dcdcdc"
       android:textSize="15dp"
       android:textColor="@color/colorPrimary"
       android:background="@drawable/search_style"
       />
    <RelativeLayout
        android:layout_width="4dp"
        android:layout_height="wrap_content">
    </RelativeLayout>
    <ImageButton
        android:id="@+id/search_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/search_magebutton"
        android:background="@drawable/search_button_image_style"
        />

</android.support.v7.widget.Toolbar>

